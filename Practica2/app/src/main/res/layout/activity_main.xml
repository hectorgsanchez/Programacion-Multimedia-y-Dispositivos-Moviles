<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- EditText: total de la cuenta -->
    <EditText
        android:id="@+id/editTextCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Introduce el total de la cuenta (€)"
        android:inputType="numberDecimal"
        android:ems="10"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CheckBox: incluir propina -->
    <CheckBox
        android:id="@+id/checkBoxPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Incluir propina?"
        app:layout_constraintTop_toBottomOf="@id/editTextCuenta"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp"/>

    <!-- Texto: porcentaje de propina -->
    <TextView
        android:id="@+id/textViewSeekValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propina: 10%"
        app:layout_constraintTop_toBottomOf="@id/checkBoxPropina"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp"/>

    <!-- SeekBar: ajustar propina -->
    <SeekBar
        android:id="@+id/seekBarPropina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="10"
        app:layout_constraintTop_toBottomOf="@id/textViewSeekValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Grupo de opciones de pago -->
    <RadioGroup
        android:id="@+id/radioGroupPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/seekBarPropina"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp">

        <RadioButton
            android:id="@+id/radioEfectivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Efectivo"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarjeta"/>
    </RadioGroup>

    <!-- AutoCompleteTextView: camarero -->
    <AutoCompleteTextView
        android:id="@+id/autoCamarero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del camarero"
        android:completionThreshold="3"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupPago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Texto: calificación -->
    <TextView
        android:id="@+id/textViewCalificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Califique el servicio:"
        app:layout_constraintTop_toBottomOf="@id/autoCamarero"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp"/>

    <!-- RatingBar -->
    <RatingBar
        android:id="@+id/ratingBarServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        app:layout_constraintTop_toBottomOf="@id/textViewCalificar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Botón Calcular -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Total"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ratingBarServicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Resultado -->
    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCalcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>